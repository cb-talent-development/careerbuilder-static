%form{class: "form--large"}

  // Use div to indicate new row. Class "clear-fix" if required.
  %div{class: "box--alert"}
    %a{href: "#close-alert"} 
      %i{class: "fa fa-times fa-lg"} 
    This is an example alert box. This is an example alert box. This is an example alert box example alert box alert box alert box alert box alert box.


  %div{class: "box--alert box--alert--info"}
    %a{href: "#close-alert"} 
      %i{class: "fa fa-times fa-lg"} 
    %i{class: "fa fa-info-circle fa-lg"}
    This is an example alert box, info variant.  

  %div{class: "box--alert box--alert--success"}
    %a{href: "#close-alert"} 
      %i{class: "fa fa-times fa-lg"} 
    %i{class: "fa fa-check-circle fa-lg"}
    This is an example alert box, success variant.

  %div{class: "box--alert box--alert--caution"}
    %a{href: "#close-alert"} 
      %i{class: "fa fa-times fa-lg"} 
    %i{class: "fa fa-exclamation-circle fa-lg"}
    This is an example alert box, caution variant. 

  %div{class: "box--alert box--alert--danger"}
    %a{href: "#close-alert"} 
      %i{class: "fa fa-times fa-lg"} 
    %i{class: "fa fa-exclamation-circle fa-lg"}
    This is an example alert box, danger variant. 

  %div{class: "clear-fix"}
    %h2{class: "text--accent text--headline-2 alpha"}
      %span{class: "box--circle-text"} 
        %span 1
      User Information

  %div{class: "clear-fix"} 
    %label{class: "columns-5"}
      First Name
      %br 
      %input{type: "text"}

    %label{class: "columns-6 shift-1"}
      Last Name
      %br 
      %input{type: "text"}
  
  // CONTEXTUAL TO USER, SEE SPECS
  %div{class: "clear-fix"}
    %label
      Choose a Password
      %br 
      %input{type: "text", id: "password-field"}

      // Password helper appears on any field to CREATE NEW PASSWORD (not login)
      %div{class: "large-screen-only"}
        %div{class: "form__error box--arrow-helper hidden", id: "password-helper"}  
          Password Must Contain
          %ul
            %li 8 to 15 charecters
            %li 1 uppercase letter
            %li 1 lowercase letter
            %li 1 letter or symbol


  %div{class: "clear-fix"}
