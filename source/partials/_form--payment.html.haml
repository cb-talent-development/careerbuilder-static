      %input{type: "text"}  

  %div{class: "clear-fix"}     
    %label
      Country
      %br 
      %input{type: "text"} 

  %div{class: "clear-fix"}
    %label{class: "columns-6"}
      City
      %br 
      %input{type: "text"} 

    %label{class: "columns-3"}
      State
      %br 
      %select

    %label{class: "columns-3"}
      Zip code
      %br 
      %input{type: "text"} 

  %div{class: "box--divider-bottom columns-12", style: "margin-bottom: 32px;"}

  %div{class: "clear-fix"}    
    %label{class: "columns-12 alpha"}
      Industry
      %br 
      %select
        %option{value: "", selected: true, style: "display: none;"}
          \--- Select One ---
        %option{value: "recruiter"}Online Advertising

  %div{class: "clear-fix"} 
    %label{class: "columns-5"}
      Number of Employees
      %br 
      %select
        %option{value: "", selected: true, style: "display: none;"}
          \--- Select One ---
        %option{value: "recruiter"}100

    %label{class: "columns-6 shift-1"}
      Annual Revenue
      %br 
      %select
        %option{value: "", selected: true, style: "display: none;"}
          \--- Select One ---
        %option{value: "recruiter"}100

