    %label{class: "columns-5"}
      \# of Locations
      %span{class: "text--ghost"}Optional
      %br 
      %input{type: "text"}

    %label{class: "columns-6 shift-1"}
      Company Phone 
      %br 
      %input{type: "text"}      

  %div{class: "clear-fix"}
