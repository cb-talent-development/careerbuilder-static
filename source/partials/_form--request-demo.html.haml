%form{class: "form--large request-demo"}

  // Use div to indicate new row. Class "clear-fix" if required.
  %div 
    %label{class: "columns-5"}
      First Name
      %br 
      %input{type: "text"}

    %label{class: "columns-6 shift-1"}
      Last Name
      %br 
      %input{type: "text"}
  
  %div
    %label
      Company Name
      %br 
      %input{type: "text"}   

  %div
    %label{class: "columns-5"}
      Email Address
      %br 
      %input{type: "text"}

    %label{class: "columns-6 shift-1"}
      Phone Number
      %br 
      %input{type: "text"}

  %div    
    %label{class: "columns-12"}
      Message 
      %span{class: "text--ghost"}
        (optional)
      %br 
      %textarea{rows: "4", style: "width: 100%;"}

  %div{class: "columns-4 shift-8", style: "text-align: right; margin-right: 0"} 
    %submit{class: "button button--primary"}
      Submit             