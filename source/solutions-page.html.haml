// fixed, hidden until scroll
%div{class: "sticky-nav text--body large-screen-only"}        
  %nav{class: "container"}
    = partial 'partials/solutions-subnav' 

// layer over sticky nav, scrolls away
%div{class: "sticky-nav__top-container"}

  // large-header 
  // IMAGES IN THIS HEADER MUST BE MATTED CAREFULLY
  // BECAUSE THEY COVER DARK AND WHITE BACKGROUNDS
  = partial 'partials/header-large-alternate', :locals => {headline: "Is <strong>your recruitment</strong> too complex and time intensive?", image: "placeholder-470.png", add_class: "no-bottom-margin"}  

  %div{class: "container text--body "}
    %div{class: "product__intro-text"}
