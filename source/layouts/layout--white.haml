!!! 5

%html
  %head
    %meta{ content: "IE=edge", "http-equiv" => "X-UA-Compatible" }
    %meta{ charset: "utf-8" }

    / Responsive/Mobile Content Controls
    %meta{ name: 'viewport', content: 'width=device-width, height=device-height, initial-scale=1.0, user-scalable=0' }

    / TEMPORARY LOAD OF JQUERY 1.9 -- USE ASSET PIPELINE IN FINAL DEPLOY
    / placeholder
    %script{type: "text/javascript", src: "//img.icbdr.com/Common/js/jquery/jquery-1.9.0.min.js"}

    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title + ' | CareerBuilder'

    %link{ href: '//fonts.googleapis.com/css?family=Lato:300,400,700', rel: 'stylesheet', type: 'text/css' }

    - # This may want to move to a file hosted on CareerBuilder's stack
    %link{ rel: "stylesheet", href: "//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"}

    = stylesheet_link_tag :site

    / Loads selectivizer for IE8 to corrct grid incompatabilities. Must be loaded *after* jquery!
    = surround "<!--[if lte IE 8]>", "<![endif]-->" do
      = javascript_include_tag :ie8
      = stylesheet_link_tag :ie8

  %body{ class: page_classes + " employer-scope" }

    %div{class: "modal__background hidden", id: "modal-background"}

    = partial 'partials/top-bar--white'

    = yield

    = partial 'partials/footer'

    = javascript_include_tag :site
    %script{:src => 'https://s3.amazonaws.com/cortex-content-snippets/content-snippets-view.js'}
