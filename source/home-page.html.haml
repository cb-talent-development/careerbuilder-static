/ header-large 
%header{class: "header header--home"}
  %div{class: "container"}

    %nav{class: "header__subnav text--white text--subnav medium-screen-up"}
      %div{class: 'columns-6'} 
        %ul 
          %li 
            %a{href: "#products"}
              Products
          %li
            %a{href: "#cart"}  
              Resources
          %li
            %a{href: "#contact"} 
              About Us
      %div{class: 'columns-2 shift-1'} 
        %a{href: "#foo", class: "button button--primary button--large button--sucess"} 
          Post a Job

      %div{class: 'columns-3'} 
        %a{href: "#bar", class: "button button--primary button--large"} 
          Search Candidates    

    / header__headline 
    %div{class: "header--large__headline"}

      %h1{class: "text--headline text--white"}
        headline text

      %h2{class: "text--subhead text--white"}
        Subhead text

    / product image 
    %div{class: "header--large__image large-screen-only"}  
      = image_tag 'carosel--laptop.png'

